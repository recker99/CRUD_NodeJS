<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Registros</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  <body>
    <div class="container bg-light mt-2">
      <div class="row justify-content-center mt-5"> 
        <div class="col-12 col-lg-8">
          <h3 class="mb-3 justify-content-center"  >Lista de Registros</h3>
          <a href="/create" class="btn btn-primary">Nuevo</a>
                <a href="/" class="btn btn-warning">Ir al chat</a>
                    <a href="/" class="btn btn-danger">Cerrar Sesion</a>
          <table class="table table-bordered table-striped text-center mt-4"> 
            <thead>
                <tr class="bg-primary text-white">
                  <th scope="col">Id</th>
                  <th scope="col">Usuario</th>
                  <th scope="col">Password</th>
                  <th scope="col">Correo</th>
                  <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <% results.forEach((user)=> { %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.user %></td>
                  <td><%= user.password %></td>
                  <td><%= user.correo %></td>
                  <td>
                      <a href="/edit/<%= user.id %>" class="btn btn-outline-info">Modificar</a>
                      <a href="/delete/<%= user.id %>" class="btn btn-outline-info">Eliminar</a>
                  </td>
                </tr>
             <% }) %>
            </tbody>
          </table>
                  
            </div>
        </div>
  </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>